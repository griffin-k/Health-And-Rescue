<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.usama.ridekaro.views.profile">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/productsansregular"
                android:scaleType="centerInside"
                android:src="@drawable/pro"
                app:layout_collapseMode="parallax"
                app:lottie_rawRes="@raw/profile"
                app:lottie_loop="true"
               app:lottie_autoPlay="true" />

            <TextView
                android:id="@+id/headingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textFontWeight="30"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:layout_margin="30px"
                android:text="ABOUT YOU"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textFontWeight="30"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:layout_margin="10px"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="18sp" />


        <!-- Input Field 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/inputname"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:inputType="text"
            android:hint="Enter Name"
            android:drawablePadding="8dp"
            android:background="@drawable/inputshape"
            android:padding="8dp"
            android:layout_margin="16dp"/>

        <!-- Input Field 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/inputphone"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:padding="8dp"
            android:background="@drawable/inputshape"
            android:layout_margin="16dp"
            android:hint="Enter Phone No"/>

        <!-- Input Field 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mailing Address:"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/inputmail"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:inputType="text"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:background="@drawable/inputshape"
            android:layout_margin="16dp"
            android:hint="Enter Mailing Address "/>


        <!-- Input Field 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/inputhome"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:inputType="text"
            android:padding="8dp"
            android:background="@drawable/inputshape"
            android:layout_margin="16dp"
            android:drawablePadding="8dp"
            android:hint="Enter Home Address"/>






        <!-- Continue adding titles and input fields for the remaining inputs -->

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/inputshape"
            android:textColor="@color/white"
            android:backgroundTint="@color/Green"
            android:layout_gravity="center"
            android:text="Save" />



    </LinearLayout>
</ScrollView>
