<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.usama.ridekaro.views.fav_place">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/productsansregular"
                android:scaleType="centerInside"
                android:src="@drawable/pro"
                app:layout_collapseMode="parallax"
                app:lottie_rawRes="@raw/medical"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

            <TextView
                android:id="@+id/headingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textFontWeight="30"
                android:fontFamily="@font/lato_bold"
                android:textStyle="bold"
                android:layout_margin="30px"
                android:text="MEDICAL ID"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </com.google.android.material.appbar.AppBarLayout>



    <!-- Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textFontWeight="30"
        android:fontFamily="@font/lato_bold"
        android:textStyle="bold"
        android:text=""
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_margin="16dp"/>



    <!-- Input Field 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField1"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:inputType="text"
        android:hint="Enter Name"
        android:drawablePadding="8dp"
        android:background="@drawable/inputshape"
        android:padding="8dp"
        android:layout_margin="16dp"/>

    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group:"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField2"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:hint="Enter Blood Group"/>

    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allergies:"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField3"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:inputType="text"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:hint="Enter Allergies "/>


    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Condition:"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField4"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:drawablePadding="8dp"
        android:hint="Enter Medical Condition"/>


    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact:"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField5"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:hint="Enter Emergency Contact"/>


    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gardian Phone:"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField6"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:padding="8dp"
        android:inputType="number"
        android:drawablePadding="8dp"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:hint="Enter Gardian Phone#"/>


    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physician Name:"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField7"
        android:layout_width="match_parent"
        android:drawablePadding="8dp"
        android:layout_height="100px"
        android:padding="8dp"
        android:inputType="text"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:hint="Enter Physician Name"/>


    <!-- Input Field 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physician Contact:"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/inputField8"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:padding="8dp"
        android:inputType="number"
        android:drawablePadding="8dp"
        android:background="@drawable/inputshape"
        android:layout_margin="16dp"
        android:hint="Enter Physician Contact"/>



    <!-- Continue adding titles and input fields for the remaining inputs -->

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/inputshape"
        android:textColor="@color/white"
        android:backgroundTint="@color/Green"
        android:layout_gravity="center"
        android:text="Save" />



</LinearLayout>
</ScrollView>
