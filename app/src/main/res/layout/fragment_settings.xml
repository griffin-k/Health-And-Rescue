<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.usama.ridekaro.views.navDrawerFragments.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/productsansregular"
            android:text="@string/general"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGeneral">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ibProfile"
                    android:contentDescription="FAV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="@string/profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="@string/Enter_Mobile_Number"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@id/tvProfile" />

                <ImageButton
                    android:id="@+id/ibFavorites"
                    android:layout_width="wrap_content"
                    android:contentDescription="FAV"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/sf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibProfile" />

                <TextView
                    android:id="@+id/tvFavorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="@string/favorites"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@+id/ibProfile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="@string/Manage_favorite_locations"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibFavorites"
                    app:layout_constraintTop_toBottomOf="@id/tvFavorites" />

                <ImageButton
                    android:id="@+id/ibPreferences"
                    android:layout_width="wrap_content"
                    android:contentDescription="FAV"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/sm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibFavorites" />

                <TextView
                    android:id="@+id/tvPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Health ID"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@+id/ibFavorites" />

                <TextView
                    android:id="@+id/txtPreferences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:fontFamily="@font/productsansregular"
                    android:text="Health Status"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintStart_toEndOf="@id/ibProfile"
                    app:layout_constraintTop_toBottomOf="@id/tvPreferences" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAppLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ibPreferences">

                    <ImageButton
                        android:id="@+id/ibLanguage"
                        android:layout_width="wrap_content"
                        android:contentDescription="FAV"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/dp_15"
                        android:src="@drawable/sl"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:fontFamily="@font/productsansregular"
                        android:text="@string/app_language"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toEndOf="@id/ibLanguage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvLanguageChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:fontFamily="@font/productsansregular"
                        android:text="@string/english"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintStart_toEndOf="@id/ibLanguage"
                        app:layout_constraintTop_toBottomOf="@id/tvLanguage" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvOthers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:fontFamily="@font/productsansregular"
            android:text="@string/others"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvGeneral" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOthers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOthers">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/ibLogout"
                    android:contentDescription="FAV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/productsansregular"
                    android:padding="@dimen/dp_15"
                    android:src="@drawable/so"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tvOPDTreatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/productsansregular"
                    android:text="@string/logout"
                    android:textColor="@color/black"

                    android:textSize="@dimen/sp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.083"
                    app:layout_constraintStart_toEndOf="@+id/ibLogout"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>